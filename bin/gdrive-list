#!/bin/bash
# Agent-friendly Google Drive list script  
# Usage: gdrive-list [folder]

FOLDER="${1:-ai-projects/$(basename "$PWD")}"

echo "ğŸ“‚ Listing files in Google Drive folder '$FOLDER':"
echo ""

if rclone ls "lisaross:$FOLDER/" 2>/dev/null; then
    echo ""
    echo "ğŸ“ Subdirectories:"
    rclone lsd "lisaross:$FOLDER/" 2>/dev/null || echo "   (none)"
else
    echo "âŒ Folder '$FOLDER' not found or empty"
    echo ""
    echo "ğŸ’¡ Available top-level folders:"
    rclone lsd "lisaross:" | head -10
fi